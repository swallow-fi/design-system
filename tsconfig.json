{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "examples/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}